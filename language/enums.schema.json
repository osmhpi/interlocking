{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enums",
  "type": "object",
  "definitions": {
    "EnumType": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "enum": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "required": ["description", "enum"],
      "additionalProperties": false
    }
  },
  "properties": {
    "enums": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": { "$ref": "#/definitions/EnumType" }
      },
      "additionalProperties": false
    }
  },
  "required": ["enums"],
  "additionalProperties": false
}
